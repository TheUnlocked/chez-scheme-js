        "web-worker": "^1.2.0"
    },
    "devDependencies": {
        "@types/isomorphic-fetch": "^0.0.36",
        "@types/node": "^18.11.19",
        "@types/uuid": "^9.0.0",
        "rimraf": "^4.1.2",
        "serve": "^14.2.0",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.9.1",
        "typescript": "^4.6.2",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1"
    }
}
