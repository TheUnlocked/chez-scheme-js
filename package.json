{
    "name": "scheme-js",
    "version": "1.0.0",
    "description": "Chez Scheme on the web w/ WASM and Workers",
    "sideEffects": false,
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "author": "Trevor Paley",
    "license": "MIT",
    "files": [
        "dist"
    ],
    "scripts": {
        "build-chez": "rimraf src/chez && ./build-chez.sh",
